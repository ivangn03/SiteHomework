@model IEnumerable<BLL.DTO.CategoryDTO>
@{ 
    var options = new AjaxOptions
    {
        UpdateTargetId = "result2",
        HttpMethod = "Delete"
    };
    var options2 = new AjaxOptions
    {
        UpdateTargetId = "result2",
    };
}
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Category
            </th>
            @if (User.Identity.IsAuthenticated)
            {
                <th>
                    Remove
                </th>
                <th>
                    Edit
                </th>
            }
            </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
        <tr>
            <td>
                @category.CategoryId
            </td>
            <td>
                @category.CategoryName
            </td>  @if (User.Identity.IsAuthenticated)
            {
                <td>
                    @Ajax.ActionLink("DELETE", "DELETE", new { @id = category.CategoryId }, options, new { @class = "btn btn-danger" })
                </td>
                <td>
                    @Ajax.ActionLink("Edit", "CategoryEdit", new { @id = category.CategoryId }, options2, new { @class = "btn btn-success" })
                </td>
            }
            </tr>
        }
    </tbody>
</table>